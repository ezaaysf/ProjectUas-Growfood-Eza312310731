<!-- res/drawable/rounded_edittext.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Warna bayangan -->
            <corners android:radius="50dp" /> <!-- Lengkungan sudut -->
        </shape>
    </item>

    <!-- Background Layer -->
    <item
        android:top="4dp"
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Warna latar belakang -->
            <corners android:radius="50dp" /> <!-- Lengkungan sudut -->
        </shape>
    </item>
</layer-list>
